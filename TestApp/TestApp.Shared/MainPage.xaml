<Page
    x:Class="TestApp.UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TestApp.UI"
    xmlns:mc="http://schemas.oxpenxmlformats.org/markup-compatibility/2006">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <NavigationView x:Name="Navigation">
            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="Management"/>
                <NavigationViewItem x:Name="ManageMapping" Content="Manage Mapping"/>
                <NavigationViewItem x:Name="ManageScripts" Content="Manage Scripts"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader Content="Account"/>
                <NavigationViewItem Content="Manage Accounts"/>
            </NavigationView.MenuItems>
        </NavigationView>
    </Grid>
</Page>